<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/subtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:textColor="#303F9F"
                android:text="Gestione Temi Substratum" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#303F9F" />
            <Button
                android:id="@+id/ozone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personalizza colori UI" />
            <Button
                android:id="@+id/clock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personalizza orologio" />
            <Button
                android:id="@+id/sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avvia Gestore Temi Substratum" />

            <Button
                android:id="@+id/tugtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:textColor="#303F9F"
                android:text="Gestione Temi by tugaia56" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#303F9F" />

            <Button
                android:id="@+id/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abilita tama Black" />
            <Button
                android:id="@+id/dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abilita Tema Dark" />
            <Button
                android:id="@+id/disabletheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disabilita Temi" />

        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>